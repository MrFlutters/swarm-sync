{
  "rules": {
    "function-paren-newline": "off",
    "no-underscore-dangle": "off",
    "import/extensions": ["error", "always", {
      js: "never",
      mjs: "never",
    }]
  },
  "globals": {
    "describe": true,
    "beforeEach": true,
    "before": true,
    "afterEach": true,
    "after": true,
    "it": true
  },
  "env": {
    "node": true,
    "es6": true
  },

  "extends": [
    "airbnb-base"
  ],

  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [
          ".js",
          ".mjs"
        ]
      }
    }
  }
}
